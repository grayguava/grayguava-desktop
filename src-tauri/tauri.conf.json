{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "grayguava-desktop",
  "version": "1.0.0",
  "identifier": "com.grayguava.desktop",

  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },

  "app": {
    "windows": [
      {
        "title": "GrayGuava Desktop",
        "width": 1100,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/icon.ico"
    ]
  }
}
