{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GrayGuava Desktop",
  "version": "1.0.0",
  "identifier": "com.grayguava.desktop",

  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },

  "app": {
    "windows": [
      {
        "title": "GrayGuava Desktop",
        "width": 1000,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "resources": ["../src/offline.html"],
    "targets": ["msi"],
    "icon": [
      "icons/icon.ico"
    ]
  }
}
